<h1>Departaments</h1>
<%= link_to 'New Departament',  new_departament_path %>
<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

  <% @departaments.each do |departament| %>
    <tr>
      <td><%= departament.name %></td>
      <td><%= link_to 'Show', departament_path(departament), class: 'btn btn-success'%></td>
      <td><%= link_to 'Edit', edit_departament_path(departament), class: 'btn btn-primary' %></td>
      <td><%= link_to 'Destroy', departament_path(departament),
              method: :delete,
              data: { confirm: 'Are you sure?' } , class: 'btn btn-danger'%></td>
    </tr>
  <% end %>
</table>
<br />
<%= will_paginate @departaments, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
